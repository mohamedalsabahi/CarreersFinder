<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="CarreersFinder.Views.Login">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Vertical" Margin="5" VerticalOptions="CenterAndExpand">
            <Label Text="Login"
             HorizontalTextAlignment="Center"   />
                
            <Entry x:Name="etEmail" Placeholder="Email"></Entry>
            <Entry x:Name="etPassword" IsPassword="True" Placeholder="Password"></Entry>

            <Button Text="Login" BackgroundColor="LightSalmon" CornerRadius="12" Clicked="Button_Clicked"></Button>
            <Button Text="Register" Clicked="Button_Clicked_1" BackgroundColor="LightGray" CornerRadius="12"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>